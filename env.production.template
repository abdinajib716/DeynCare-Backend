# DeynCare Backend - Production Environment Template
# DO NOT commit this file with real values - use only as a template

# Server Configuration
NODE_ENV=production
PORT=5000
API_VERSION=v1
USE_SIMPLIFIED_SERVER=false

# MongoDB Connection (SENSITIVE)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/DeynCare?retryWrites=true&w=majority

# JWT Configuration (SENSITIVE)
JWT_ACCESS_SECRET=change_this_to_a_long_random_string_for_production
JWT_REFRESH_SECRET=change_this_to_another_long_random_string_for_production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=30d

# CORS Configuration
CORS_ORIGIN=https://your-frontend-domain.com

# Email Configuration (SENSITIVE)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM="DeynCare <your_email@gmail.com>"

# Frontend URL (for email links)
FRONTEND_URL=https://your-frontend-domain.com

# Security
PASSWORD_SALT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# App Details
APP_NAME=DeynCare
APP_DESCRIPTION=Debt management and POS system

# Super Admin Creation (SENSITIVE)
# Set to 'true' only for initial deployment, then set to 'false'
CREATE_SUPER_ADMIN=false
SUPER_ADMIN_EMAIL=admin@example.com
SUPER_ADMIN_PASSWORD=strong_secure_password
SUPER_ADMIN_NAME=Admin Name
SUPER_ADMIN_PHONE=123456789

# Subscription Configuration
DEFAULT_TRIAL_DAYS=14
DATA_RETENTION_DAYS=30

# Scheduler Configuration
ENABLE_SCHEDULER=true

# CRON Job Timing
CRON_TRIAL_REMINDERS=0 8 * * *
CRON_EXPIRY_REMINDERS=0 9 * * *
CRON_AUTO_RENEWALS=0 10 * * *
CRON_DEACTIVATE_EXPIRED=0 11 * * *
